<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#0D47A1"
                android:startColor="#0288D1"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>



    <item>        
        <shape>

            <gradient
                android:startColor="#FF4081"
                android:endColor="#F50057"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>

</selector>
