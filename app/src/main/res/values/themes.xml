<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zodiac_Kot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ZodiacRadioMaleStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/img_gender_radio_man</item>
    </style>
    <style name="ZodiacRadioFemaleStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:radioButtonStyle">@drawable/img_gender_radio_woman</item>
    </style>
</resources>